<?xml version="1.0"?>
<!--
/**
 * Magento 2 extension for Cashew Payments
 */
-->
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="aws" type="host">*.amazonaws.com</value>
                <value id="cashew" type="host">*.cashewpayments.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="aws" type="host">*.amazonaws.com</value>
                <value id="cashew" type="host">*.cashewpayments.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="aws" type="host">*.amazonaws.com</value>
                <value id="cashew" type="host">*.cashewpayments.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="cashew" type="host">*.cashewpayments.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
